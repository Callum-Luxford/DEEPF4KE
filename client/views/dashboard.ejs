<div class="dashboard">
    <h1>Welcome to your Dashboard, <%= user.username %>!</h1>
    <p>Here you can upload images and reels, process them, and view your outputs.</p>
</div>

<!-- Face Upload Section -->
<div class="upload-section">
    <h2>Upload Face Image</h2>
    <div id="face-upload-area" class="upload-area">
        <input type="file" id="face-upload" accept="image/*" />
        <div id="face-preview-container" class="preview-container">
            <!-- Face image will dynamically populate here -->
        </div>
    </div>
</div>

<!-- Reel Upload Section -->
<div class="upload-section">
    <h2>Upload Reel Videos</h2>
    <div id="reel-upload-area" class="upload-area">
        <input type="file" id="reel-upload" accept="video/*" multiple />
        <div id="reel-preview-container" class="preview-container">
            <!-- Reels will dynamically populate here -->
        </div>
    </div>
</div>

<!-- Processing Section -->
<div class="process-section">
    <h2>Process & Generate</h2>
    <button id="process-btn">Generate & Process</button>
    <p id="process-status" style="display: none;">Processing...</p>
</div>

<!-- Outputs Section -->
<div class="outputs-section">
    <h2>Generated Outputs</h2>
    <div id="outputs" class="outputs-container">
        <!-- Outputs will dynamically populate here -->
    </div>
</div>